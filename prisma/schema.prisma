generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model accounts {
  id                 Int        @id @default(autoincrement())
  name               String
  email              String
  phone              BigInt
  password           String
  establishment_name String
  created_at         DateTime   @default(now())
  category           category[]
}

model category {
  id                                 Int       @id @default(autoincrement())
  name                               String
  account                            Int
  created_at                         DateTime  @default(now())
  accounts                           accounts  @relation(fields: [account], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "category_accounts_fk")
  product_product_categoryTocategory product[] @relation("product_categoryTocategory")
}

model product {
  id                                  Int      @id @default(autoincrement())
  name                                String
  price                               Int
  description                         String
  category                            Int
  created_at                          DateTime @default(now())
  category_product_categoryTocategory category @relation("product_categoryTocategory", fields: [category], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "product_category_fk")
}
